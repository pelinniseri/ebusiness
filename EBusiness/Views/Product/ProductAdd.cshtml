@model EBusiness.Data.Models.Product
@{
    ViewData["Title"] = "ProductAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Seite "Produkt hinzufügen"</h1>
<br />
<br />
@using (Html.BeginForm("ProductAdd", "Product", FormMethod.Post))
{
    @Html.Label("Produktname")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })

    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.Label("Preis")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Image")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    @Html.Label("Kategorie")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
    <br />
    @Html.Label("Darstellung")
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary" style="font-size: 15px">Speichern</button>


}

